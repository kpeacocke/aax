# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf diff=python
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Scripts
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.go text eol=lf
*.rs text eol=lf
*.rb text eol=lf
*.php text eol=lf
*.pl text eol=lf
*.lua text eol=lf

# Web files
*.html text eol=lf diff=html
*.css text eol=lf diff=css
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.xml text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf
